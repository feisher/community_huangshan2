<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title"/>

    <LinearLayout
        android:layout_width="640px"
        android:layout_height="351px"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="@color/font_color_3"
            android:text="支付成功!"/>

        <TextView
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="@color/font_color_3"
            android:text="请您于30分钟内及时前往，开始充电!"/>

        <RelativeLayout
            android:id="@+id/diaohang_layout"
            android:layout_width="155px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px"
            android:background="@drawable/round_relativelayout">

            <ImageView
                android:layout_width="52px"
                android:layout_height="53px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:src="@mipmap/daohangqianwang"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="94px"
                android:gravity="center"
                android:textSize="25px"
                android:textColor="@color/white"
                android:text="导航前往"/>

        </RelativeLayout>

    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/daohang_mapview"
        android:layout_width="640px"
        android:layout_height="match_parent"/>


</LinearLayout>
