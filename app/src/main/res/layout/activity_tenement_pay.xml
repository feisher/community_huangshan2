<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/app_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30px"
            android:text="缴费地址："
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:textColor="#333333"
            android:textSize="28px"
            tools:text="中国杭州宇松科技" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30px"
            android:text="缴费金额："
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:textColor="#333333"
            android:textSize="28px"
            tools:text="- - .- -" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13px"
        android:layout_marginLeft="28px"
        android:layout_marginTop="23px"
        android:text="支付方式"
        android:textColor="#888888"
        android:textSize="24px" />

    <LinearLayout
        android:id="@+id/ll_zhilian"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/zhilian_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="智联钱包"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zhilian"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/selected" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/wx_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="微信钱包"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/not_select" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/zhifubao_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="支付宝钱包"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/not_select" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="580px"
        android:layout_height="81px"
        android:layout_marginLeft="29px"
        android:layout_marginTop="36px"
        android:background="#1dacff"
        android:text="支   付"
        android:textColor="#ffffff" />
</LinearLayout>