<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/used_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textColor="@color/font_color_3"
        android:textSize="26px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21px"
        android:layout_marginRight="21px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/now_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="#FF5E28"
            android:textSize="40px" />

        <TextView
            android:id="@+id/old_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:gravity="bottom"
            android:text="原价 ￥0.00"
            android:textColor="#AFAFAF"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_1_1"
        android:layout_width="412px"
        android:layout_height="412px"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="22px"
        android:layout_marginTop="10px"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:background="@mipmap/empty_photo" />

    <LinearLayout
        android:id="@+id/item_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_2_1"
            android:layout_width="206px"
            android:layout_height="206px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginTop="5px"
            android:scaleType="centerCrop"
            tools:background="@mipmap/empty_photo" />

        <ImageView
            android:id="@+id/image_2_2"
            android:layout_width="206px"
            android:layout_height="206px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginTop="5px"
            android:scaleType="centerCrop"
            tools:background="@mipmap/empty_photo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_3_1"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:scaleType="centerCrop"
            tools:background="@mipmap/empty_photo" />

        <ImageView
            android:id="@+id/image_3_2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:scaleType="centerCrop"
            tools:background="@mipmap/empty_photo" />

        <ImageView
            android:id="@+id/image_3_3"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:scaleType="centerCrop"
            tools:background="@mipmap/empty_photo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_4_1"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_4_2"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_4_3"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_4_4"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_and_st"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="22px"
            android:textColor="#FF5E28"
            android:textSize="24px" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="161px"
            android:layout_height="57px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="21px"
            android:background="@drawable/order_item_quxiao_button"
            android:text="编辑"
            android:textColor="@color/font_color_3"
            android:visibility="gone" />

        <Button
            android:id="@+id/out_button"
            android:layout_width="161px"
            android:layout_height="57px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="21px"
            android:background="@drawable/order_item_quxiao_button"
            android:text="下架"
            android:textColor="@color/font_color_3"
            android:visibility="gone" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="161px"
            android:layout_height="57px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="21px"
            android:background="@drawable/order_item_quxiao_button"
            android:text="删除"
            android:textColor="@color/font_color_3"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>