<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yusong.community.ui.school.teacher.activity.ChooseStudentActivity">

    <include layout="@layout/app_title" />

    <include layout="@layout/layout_choose_stu" />

    <com.yusong.community.utils.bga.BGARefreshLayout
        android:id="@+id/mBGA_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/not_data_layout" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px" />
        </LinearLayout>
    </com.yusong.community.utils.bga.BGARefreshLayout>

</LinearLayout>
