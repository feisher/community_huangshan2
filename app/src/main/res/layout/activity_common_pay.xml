<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff4"
              android:orientation="vertical">


    <include
        layout="@layout/app_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="21px"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="29px"
            android:text="订单金额"
            android:textSize="28px"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="33px"
                android:layout_marginTop="28px"
                android:textColor="#ff3904"
                tools:text="888"
                />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="24px"
        android:text="支付方式"
        android:textSize="24px"
        />


    <LinearLayout
        android:id="@+id/ll_zl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/zhilian_pay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="智联钱包"
            android:textSize="28px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_zl"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/selected"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/wx_pay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="微信钱包"
            android:textSize="28px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/not_select"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/zhifubao_pay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="支付宝钱包"
            android:textSize="28px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/not_select"
                />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="580px"
        android:layout_height="81px"
        android:layout_marginLeft="29px"
        android:layout_marginTop="36px"
        android:background="#1dacff"
        android:text="支   付"
        android:textColor="#ffffff"
        />

</LinearLayout>