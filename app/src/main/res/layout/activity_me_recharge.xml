<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/app_title" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13px">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13px"
        android:layout_marginLeft="28px"
        android:layout_marginTop="23px"
        android:text="其他金额"
        android:textColor="#888888"
        android:textSize="24px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="21px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="28px"
            android:background="@null"
            android:hint="请输入金额"
            android:inputType="number"
            android:textColor="#888888"
            android:textSize="28px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13px"
        android:layout_marginLeft="28px"
        android:layout_marginTop="23px"
        android:text="支付方式"
        android:textColor="#888888"
        android:textSize="24px" />

    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/wx_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="微信钱包"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/selected" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/zhifubao_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="支付宝钱包"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="29px"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:background="@mipmap/not_select" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="580px"
        android:layout_height="81px"
        android:layout_marginLeft="29px"
        android:layout_marginTop="36px"
        android:background="#1dacff"
        android:text="支   付"
        android:textColor="#ffffff" />
</LinearLayout>