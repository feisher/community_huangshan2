<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5px"
    android:layout_width="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:orientation="vertical"
        android:background="@color/business_bg">
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="289px"
            android:layout_height="172px"
            android:scaleType="centerCrop"
            android:src="@mipmap/video_big"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:textSize="24px"
            android:textColor="#000000"
           />
        <LinearLayout
            android:layout_width="289px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px">
            <TextView
                android:id="@+id/item_score"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22px"
                android:textColor="@color/font_color_4"
                />
            <TextView
                android:id="@+id/item_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/red_normal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
