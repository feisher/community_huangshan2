<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="21px"
            android:layout_marginTop="21px"
            tools:src="@mipmap/home_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_color_9"
                    android:textSize="28px"
                    tools:text="李峰" />

                <TextView
                    android:id="@+id/create_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:textColor="@color/font_color_9"
                    android:textSize="28px"
                    tools:text="1600-12-30 12:30" />
            </LinearLayout>

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20px"
                android:paddingRight="30px"
                android:paddingTop="30px"
                android:textColor="@color/font_color_3"
                android:textSize="26px"
                tools:text="欧神诺发牢骚的解放军死垃圾地方就算了点就睡了垃圾堆里借了就算了法第六届" />

            <ImageView
                android:id="@+id/image_1_1"
                android:layout_width="412px"
                android:layout_height="412px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="22px"
                android:layout_marginTop="10px"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:background="@mipmap/empty_photo" />

            <LinearLayout
                android:id="@+id/item_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_2_1"
                    android:layout_width="206px"
                    android:layout_height="206px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_marginTop="5px"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />

                <ImageView
                    android:id="@+id/image_2_2"
                    android:layout_width="206px"
                    android:layout_height="206px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_marginTop="5px"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_3_1"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="5px"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />

                <ImageView
                    android:id="@+id/image_3_2"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="5px"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />

                <ImageView
                    android:id="@+id/image_3_3"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="5px"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="8px"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_4_1"
                    android:layout_width="0dp"
                    android:layout_height="120px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />

                <ImageView
                    android:id="@+id/image_4_2"
                    android:layout_width="0dp"
                    android:layout_height="120px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />


                <ImageView
                    android:id="@+id/image_4_3"
                    android:layout_width="0dp"
                    android:layout_height="120px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />

                <ImageView
                    android:id="@+id/image_4_4"
                    android:layout_width="0dp"
                    android:layout_height="120px"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:background="@mipmap/empty_photo" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>