<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yusong.club.ui.school.teacher.fragment.FirstItemFragment">

    <com.yusong.club.utils.bga.BGARefreshLayout
        android:id="@+id/mBGA_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/business_bg">

            <include layout="@layout/not_data_layout" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </com.yusong.club.utils.bga.BGARefreshLayout>

</LinearLayout>
