<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ds="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <com.yusong.community.utils.bga.BGARefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/business_bg"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="640px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125px"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/commundity_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="74px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="37px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/font_color_3"
                        android:textSize="30px" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="76px"
                        android:layout_marginRight="32px"
                        android:background="@color/business_bg" />

                    <LinearLayout
                        android:id="@+id/linear_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="38px"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/business_shop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="商铺"
                            android:textColor="@color/business_text"
                            android:textSize="24px" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="617px"
                    android:layout_height="1px"
                    android:background="@color/business_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sold_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:paddingBottom="11px"
                        android:paddingTop="12px"
                        android:textColor="@color/font_color_9"
                        android:textSize="20px"
                        tools:text="已售 22 件" />

                    <TextView
                        android:id="@+id/left_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:paddingBottom="11px"
                        android:paddingTop="12px"
                        android:textColor="@color/font_color_9"
                        android:textSize="20px"
                        tools:text="仅剩 1 件" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/select_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_marginTop="20px"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/guige_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="规格：无"
                        android:textColor="@color/font_color_6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="29px"
                        android:background="@mipmap/arrow_right_gray" />
                </LinearLayout>

                <com.yusong.community.ui.school.teacher.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10px"
                    android:background="@color/white"
                    android:visibility="gone"
                    ds:max_select="1" />

                <TextView
                    style="@style/information_text"
                    android:layout_marginTop="20px"
                    android:text="商品简介"
                    android:textColor="@color/font_color_3"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="617px"
                    android:layout_height="1px"
                    android:background="@color/business_bg" />

                <TextView
                    android:id="@+id/commodity_jishao_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="12px"
                    android:paddingLeft="22px"
                    android:text=""
                    android:textColor="@color/business_text"
                    android:textSize="26px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shop_picture_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    style="@style/information_text"
                    android:layout_marginTop="30px"
                    android:text="商品评价"
                    android:textColor="@color/font_color_3"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="617px"
                    android:layout_height="1px"
                    android:background="@color/business_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/pinlun_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.yusong.community.utils.bga.BGARefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:text="¥ 0.00"
            android:textColor="@color/red_normal"
            android:textSize="40px" />

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="226px"
            android:layout_height="88px"
            android:background="@drawable/sele_buy"
            android:text="优惠购买"
            android:textColor="@color/white"
            android:textSize="30px" />
    </LinearLayout>

</LinearLayout>
