<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/business_bg"
    android:orientation="vertical"
    tools:context="com.yusong.community.ui.school.teacher.activity.DutyTeacherActivity">

    <include layout="@layout/layout_school_title" />

    <com.yusong.community.utils.bga.BGARefreshLayout
        android:id="@+id/mBGA_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/not_data_layout" />

            <TextView
                android:id="@+id/tv_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginLeft="29px"
                android:gravity="center_vertical"
                android:text="老师"
                android:textColor="@color/font_color_9"
                android:textSize="26px" />

            <ListView
                android:id="@+id/lv_duty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"></ListView>
        </LinearLayout>
    </com.yusong.community.utils.bga.BGARefreshLayout>
</LinearLayout>
