<?xml version="1.0" encoding="utf-8"?>
<com.yusong.community.utils.bga.BGARefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">
    <!--<include layout="@layout/app_title"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="#1DACFF"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerHorizontal="true"
                    tools:src="@mipmap/default_user_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_click_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_yellow_oval"
                        android:gravity="center"
                        android:text="点击登陆"
                        android:textColor="#fff"
                        android:textSize="23px"
                        android:visibility="gone" />
                    <!-- android:textColor="@drawable/select_red"-->
                    <TextView
                        android:id="@+id/tv_user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="等级：Lv2"
                        android:textColor="#fff"
                        android:textSize="23px" />

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="28px"
                        android:layout_marginLeft="48px"
                        android:layout_marginRight="48px"
                        android:background="#60C5FF"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_signin_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_blue_oval"
                        android:gravity="center_vertical"
                        android:text="已签到"
                        android:textColor="#1DACFF"
                        android:textSize="23px" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#8ed6ff" />

            <LinearLayout
                android:id="@+id/ll_logined_fun_layout"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="#1DACFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_my_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableTop="@mipmap/icon_my_balance"
                        android:gravity="center"
                        android:text="我的余额"
                        android:textColor="#fff"
                        android:textSize="21px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_my_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="#fff"
                            android:textSize="18px" />
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center"-->
                        <!--android:textSize="16px"-->
                        <!--android:textColor="#fff"-->
                        <!--android:text="元"/>-->
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="35px"
                    android:layout_marginTop="35px"
                    android:background="#8ed6ff" />

                <LinearLayout
                    android:id="@+id/ll_my_red_packet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableTop="@mipmap/icon_my_red_packet"
                        android:gravity="center"
                        android:text="我的红包"
                        android:textColor="#fff"
                        android:textSize="21px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_my_red_packet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="18px" />
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center"-->
                        <!--android:textSize="16px"-->
                        <!--android:textColor="#fff"-->
                        <!--android:text="个"/>-->
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="35px"
                    android:layout_marginTop="35px"
                    android:background="#8ed6ff" />

                <LinearLayout
                    android:id="@+id/ll_my_integral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableTop="@mipmap/icon_my_integral"
                        android:gravity="center"
                        android:text="我的积分"
                        android:textColor="#fff"
                        android:textSize="21px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_my_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="18px" />
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center"-->
                        <!--android:textSize="16px"-->
                        <!--android:textColor="#fff"-->
                        <!--android:text="分"/>-->
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="我的订单"
                android:textColor="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_myorder"
                android:paddingTop="15px"
                android:paddingBottom="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="我的工具"
                android:textColor="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mytools"
                android:paddingTop="15px"
                android:paddingBottom="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="88px"
                    android:layout_marginTop="20px"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="设置"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginTop="20px"
                    android:background="#fff"
                    android:drawablePadding="16px"
                    android:drawableRight="@mipmap/arrow_right_gray"
                    android:gravity="center_vertical|right"
                    android:paddingRight="30px"
                    android:text="个人信息、意见反馈等" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</com.yusong.community.utils.bga.BGARefreshLayout>
