<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.yusong.club.ui.school.teacher.activity.UploadPhotoActivity">

    <include layout="@layout/layout_school_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/business_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/im_add"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_margin="20px"
                android:background="@drawable/icon_addpic_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#FFFFFF"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前相册"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_photo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.1儿童节"
                android:textColor="@color/font_color_9" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:src="@mipmap/icon_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所在位置"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州市西湖区"
                android:textColor="@color/font_color_9" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:src="@mipmap/icon_right" />

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@null"
                android:hint="相册描述信息"
                android:textColorHint="@color/font_color_9"
                android:textSize="30px" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="581px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:background="@drawable/select_blue"
            android:text="上传"
            android:textColor="@color/white"
            android:textSize="34px" />

    </LinearLayout>

</LinearLayout>
