<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="146px"
                android:layout_height="45px"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/leixing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28px"
                android:textColor="@color/white"
                android:textSize="24px"
                tools:text="房屋维修" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:gravity="center_vertical"
                android:textColor="#f00"
                android:textSize="24px"
                tools:text="已处理" />

        </RelativeLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="11px"
            android:textColor="@color/font_color_9"
            android:textSize="28px"
            tools:text="投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你投诉你
................" />

        <ImageView
            android:id="@+id/image_1_1"
            android:layout_width="412px"
            android:layout_height="412px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="22px"
            android:layout_marginTop="10px"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:background="@mipmap/empty_photo" />

        <LinearLayout
            android:id="@+id/item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_2_1"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_2_2"
                android:layout_width="206px"
                android:layout_height="206px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_3_1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_3_2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_3_3"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="8px"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_4_1"
                android:layout_width="0dp"
                android:layout_height="160px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_4_2"
                android:layout_width="0dp"
                android:layout_height="160px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />


            <ImageView
                android:id="@+id/image_4_3"
                android:layout_width="0dp"
                android:layout_height="160px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />

            <ImageView
                android:id="@+id/image_4_4"
                android:layout_width="0dp"
                android:layout_height="160px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:background="@mipmap/empty_photo" />
        </LinearLayout>

        <TextView
            android:id="@+id/create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="17px"
            tools:text="2018-02-01 20:23" />
    </LinearLayout>

</LinearLayout>