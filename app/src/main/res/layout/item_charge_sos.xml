<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="640px"
        android:layout_height="190px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/head_picture_image"
            android:layout_width="151px"
            android:layout_height="151px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:scaleType="fitXY"
            android:src="@mipmap/yidongsos"/>

        <TextView
            android:id="@+id/sos_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="197px"
            android:layout_marginTop="29px"
            android:textSize="28px"
            android:textColor="@color/font_color_3"
            android:text="海师傅"/>

        <RatingBar
            style="@style/MyRatingBar"
            android:id="@+id/pingfen_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340px"
            android:layout_marginTop="29px"
            android:padding="0px"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21px"
            android:layout_marginTop="31px"
            android:textSize="28px"
            android:textStyle="bold"
            android:textColor="@color/font_color_red"
            android:text="¥ 50"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="197px"
            android:layout_marginTop="90px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/font_color_4"
                    android:text="所属车行:"/>

                <TextView
                    android:id="@+id/shanghang_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:textSize="24px"
                    android:textColor="@color/font_color_4"
                    android:text="屯溪延安新日电动车行"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/font_color_4"
                    android:text="电话号码:"/>

                <TextView
                    android:id="@+id/tell_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:textSize="24px"
                    android:textColor="@color/font_color_4"
                    android:text="123-4567-9876"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
