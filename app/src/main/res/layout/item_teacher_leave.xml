    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_header"
        android:layout_marginRight="30px"
        android:layout_toEndOf="@+id/iv_header"
        android:layout_toRightOf="@+id/iv_header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="0dp"
                android:layout_height="81px"
                android:layout_weight="1"
                android:background="@mipmap/text_bg"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="40px"
                android:text="请假条"
                android:textColor="@color/white"
                android:textSize="34px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13px"
            android:background="@drawable/shape_assessor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="27px"
                android:layout_marginLeft="27px"
                android:layout_marginRight="45px"
                android:layout_marginTop="27px"
                android:text="由于生病,由于生病,头痛厉害头痛厉害,,由于生病,头痛厉害,由于生病,头痛厉害,由于生病,头痛厉害."
                android:textColor="@color/font_color_4"
                android:textSize="28px" />


            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:layout_gravity="right"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="2016-07-20"
                android:textColor="@color/font_color_4"
                android:textSize="24px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="27px"
                android:layout_marginRight="20px"
                android:background="@color/font_color_7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_marginBottom="18px"
                android:layout_marginRight="20px"
                android:layout_marginTop="18px"
                android:gravity="end">

                <TextView
                    android:id="@+id/item_status"
                    android:layout_width="140px"
                    android:layout_height="56px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="通过审批"
                    android:textColor="@color/font_color_3"
                    android:textSize="24px" />
                <Button
                    android:id="@+id/item_yes"
                    android:layout_width="140px"
                    android:layout_height="56px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/shape_btn"
                    android:text="通过"
                    android:textColor="@color/font_color_3"
                    android:textSize="24px"
                    android:visibility="visible" />
                <Button
                    android:id="@+id/item_no"
                    android:layout_width="140px"
                    android:layout_height="56px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/shape_btn"
                    android:text="不通过"
                    android:textColor="@color/font_color_3"
                    android:textSize="24px"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
