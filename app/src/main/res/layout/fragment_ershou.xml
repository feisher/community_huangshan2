<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/not_data_layout" />

    <include layout="@layout/not_network_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/ershou_tablayout"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_marginBottom="20px"
        android:background="@color/white"
        app:tabIndicatorColor="@color/title_color"
        app:tabSelectedTextColor="@color/title_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ershou_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>