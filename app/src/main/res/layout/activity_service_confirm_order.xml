<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="169px"
                android:background="@color/white">

                <ImageView
                    android:layout_width="31px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/weizhi_huise" />

                <TextView
                    android:id="@+id/name_and_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="86px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="30px"
                    android:textColor="@color/font_color_5"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/shouhuo_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="86px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="76px"
                    android:textColor="@color/font_color_5"
                    android:textSize="26px" />

                <ImageView
                    android:layout_width="17px"
                    android:layout_height="28px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dian_pu_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="194px"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/commodity_image"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/commodity_details_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60px"
                        android:layout_marginLeft="201px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="30px"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/commodity_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="201px"
                        android:layout_marginTop="137px"
                        android:textColor="#FF3904"
                        android:textSize="28px" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="服务类型："
                        android:textColor="@color/font_color_6"
                        android:textSize="28px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30px"
                        android:gravity="center_vertical"
                        android:text="上门服务"
                        android:textColor="@color/font_color_9"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/background" />

                <RelativeLayout
                    android:id="@+id/send_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="服务时间"
                        android:textColor="@color/font_color_6"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/send_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:textColor="@color/font_color_3"
                        android:textSize="28px" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110px">

                    <EditText
                        android:id="@+id/pinlun_et"
                        android:layout_width="581px"
                        android:layout_height="70px"
                        android:layout_centerInParent="true"
                        android:background="@color/background"
                        android:hint="给他留言"
                        android:paddingLeft="15px"
                        android:textSize="28px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/background" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="23px"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="金额: "
            android:textColor="@color/font_color_3"
            android:textSize="26px" />

        <TextView
            android:id="@+id/all_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:text="¥ 0.0"
            android:textColor="@color/red_normal"
            android:textSize="40px" />

        <Button
            android:id="@+id/confirm_order_btn"
            android:layout_width="226px"
            android:layout_height="88px"
            android:background="@drawable/sele_buy"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="30px" />
    </LinearLayout>

</LinearLayout>