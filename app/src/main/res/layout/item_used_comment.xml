<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/null_tv"
            android:layout_width="95px"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background" />

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="23px"
                android:layout_marginTop="20px"
                android:src="@mipmap/default_user_icon" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginRight="160px"
                android:layout_marginTop="31px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28px" />

            <TextView
                android:id="@+id/comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_marginTop="31px"
                android:textColor="#999999"
                android:textSize="22px" />

            <TextView
                android:id="@+id/comment_message_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="20px"
                android:layout_marginTop="80px"
                android:textColor="@color/black"
                android:textSize="28px" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>