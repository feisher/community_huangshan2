<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#EFEFF4"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        />
    <RelativeLayout
        android:layout_width="640px"
        android:layout_height="185px"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83px"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="36px"
                android:textSize="26px"
                android:textColor="#888888"
                tools:text="绯闻"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="33px"
                    android:layout_marginTop="37px"
                    android:textSize="26px"
                    android:textColor="#888888"
                    tools:text="13131313131"
                    />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="581px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="83px"
            android:layout_marginBottom="36px"
            android:textSize="26px"
            android:textColor="#333333"
            tools:text="fewfewfjcojwojvwoiefewfwefwefjfoiwjoifjwaoeifoijawefoiwejo"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        />
    <LinearLayout
        android:layout_width="640px"
        android:layout_height="95px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_default_sender"
            android:layout_width="150px"
            android:layout_height="56px"
            android:layout_marginLeft="134px"
            android:background="@drawable/shape_send_msg"
            android:textSize="24px"
            android:textColor="#1dacff"
            android:text="默认发货地"
            />
        <Button
            android:id="@+id/btn_default_get"
            android:layout_width="150px"
            android:layout_height="56px"
            android:layout_marginLeft="12px"
            android:background="@drawable/shape_address_btn"
            android:textSize="24px"
            android:textColor="#ff8822"
            android:text="默认收货地"
            />

        <Button
            android:id="@+id/btn_editor"
            android:layout_width="150px"
            android:layout_height="56px"
            android:layout_marginLeft="12px"
            android:background="@drawable/shape_editor_btn"
            android:textSize="24px"
            android:layout_marginRight="20px"
            android:textColor="#555555"
            android:text="编  辑"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        />

    
</LinearLayout>
