<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">


    <include layout="@layout/app_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginTop="20px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginLeft="35px"
            android:background="@null"
            android:hint="请输入取件人手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="28px" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_edt"
        android:layout_width="match_parent"
        android:layout_height="246px"
        android:layout_marginTop="21px"
        android:background="#ffffff"

        >

        <EditText
            android:id="@+id/et_mome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:layout_marginRight="29px"
            android:layout_marginTop="26px"
            android:background="@null"
            android:hint="备注信息"
            android:maxLength="100"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="503px"
            android:layout_marginTop="198px"
            android:text="0/100个字"
            android:textColor="#999999"
            android:textSize="22px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/check_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image"
            android:layout_width="32px"
            android:layout_height="32px"
            android:src="@mipmap/not_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:text="已阅读并同意"
            android:textColor="@color/font_color_9"
            android:textSize="28px" />

        <TextView
            android:id="@+id/statement_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《免责声明》"
            android:textColor="@color/blue_title"
            android:textSize="30px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="465px"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="580px"
                android:layout_height="81px"
                android:layout_marginLeft="30px"
                android:background="#1dacff"
                android:text="提交"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
