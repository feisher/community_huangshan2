<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/not_netword_layout"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="179px"
            android:layout_height="156px"
            android:src="@mipmap/not_network" />

        <TextView
            android:id="@+id/not_network_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:gravity="center"
            android:text="网络异常"
            android:textColor="@color/font_color_5"
            android:textSize="28px" />

        <Button
            android:id="@+id/not_network_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@drawable/order_item_quxiao_button"
            android:text="刷 新"
            android:textColor="@color/font_color_4"
            android:textSize="34px" />
    </LinearLayout>


</RelativeLayout>