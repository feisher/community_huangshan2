<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_role"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/app_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="22px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="当前用户"/>
                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:paddingRight="85px"
                        android:gravity="right|center_vertical"
                        android:text="15838391271"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="22px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_setting_school"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="申请学校"/>
                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint="请选择"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/arrow_right_gray"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_setting_role"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="申请开通角色"/>
                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint="请选择"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/arrow_right_gray"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="您的姓名"/>
                    <EditText
                        android:id="@+id/et_role_realname"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:paddingRight="80px"
                        android:inputType="textPersonName"
                        android:gravity="right|center_vertical"
                        android:textSize="29px"
                        android:hint="请输入真实姓名"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="您的身份证号"/>
                    <EditText
                        android:id="@+id/et_role_idcode"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:paddingRight="80px"
                        android:gravity="right|center_vertical"
                        android:textSize="29px"
                        android:hint="请输入身份证号"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="孩子的姓名"/>
                    <EditText
                        android:id="@+id/et_student_name"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:paddingRight="80px"
                        android:inputType="textPersonName"
                        android:gravity="right|center_vertical"
                        android:textSize="29px"
                        android:hint="请输入孩子姓名"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="孩子的学号"/>
                    <EditText
                        android:id="@+id/et_student_id"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:paddingRight="80px"
                        android:inputType="number"
                        android:gravity="right|center_vertical"
                        android:textSize="29px"
                        android:hint="请输入学号"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_setting_class"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="所在班级"/>
                    <TextView
                        android:id="@+id/tv_class"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint="请选择"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/arrow_right_gray"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_select_relation"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="您与孩子的关系"/>
                    <TextView
                        android:id="@+id/tv_relation"
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="1"
                        android:layout_marginRight="40px"
                        android:gravity="right|center_vertical"
                        android:textSize="29px"
                        android:maxLines="1"
                        android:hint="请选择"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28px"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/arrow_right_gray"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:id="@+id/ll_setting_child_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:textSize="29px"
                        android:textColor="#000"
                        android:text="您的照片"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="80px">
                        <ImageView
                            android:id="@+id/iv_child_icon"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10px"
                            android:layout_marginBottom="10px"
                            android:src="@mipmap/default_user_icon" />
                    </RelativeLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="47px"
                    android:layout_marginBottom="100px"
                    android:background="@drawable/select_blue"
                    android:textColor="@color/selecte_text"
                    android:text="提交申请"
                    />
            </LinearLayout>
        </ScrollView>
        <View
            android:id="@+id/pop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</LinearLayout>
