<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <include
        layout="@layout/app_title"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px"

        >

        <com.youth.banner.Banner
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="350px">
        </com.youth.banner.Banner>


        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginTop="280px"
            android:gravity="center_vertical"
            android:background="#000000"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33px"
                android:textSize="28px"
                android:textColor="#ffffff"
                tools:text="文三小学快递柜"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119px"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <Button
            android:layout_width="169px"
            android:layout_height="61px"
            android:layout_marginLeft="28px"
            android:layout_marginTop="29px"
            android:textSize="28px"
            tools:text="我要寄件"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#efeff4"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29px"
        android:layout_marginTop="31px"
        android:textColor="#000000"
        tools:text="快递柜信息"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30px"
        android:background="#dddddd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="36px"
        android:textSize="30px"
        android:textColor="#000000"
        tools:text="文三小学"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30px"
            android:textSize="28px"
            android:textColor="#808080"
            tools:text="地址地址地址"
            />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="31px"
            android:textSize="28px"
            android:textColor="#808080"
            tools:text="1.9km"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="37px"
        android:background="#dddddd"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#efeff4"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29px"
        android:layout_marginTop="32px"
        android:textColor="#000000"
        android:text="使用情况"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="31px"
        android:background="#dddddd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="187px"
            android:layout_height="111px"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_editor_ll"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="大箱"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="4/8"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="187px"
            android:layout_height="111px"
            android:layout_marginLeft="10px"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_editor_ll"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="中箱"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="4/8"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="187px"
            android:layout_height="111px"
            android:layout_marginLeft="10px"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_editor_ll"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="小箱"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:text="4/8"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
