<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/title_color">
        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="50dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/im_back"
                android:layout_width="70px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="70px"
                android:src="@mipmap/business_back"/>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="301px"
            android:layout_height="61px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_one"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radiobutton_one"
                android:button="@null"
                android:textColor="@color/selecte_text"
                android:text="通讯录"/>
            <RadioButton
                android:id="@+id/rbtn_two"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radiobutton_two"
                android:button="@null"
                android:textColor="@color/selecte_text"
                android:text="群组"/>
        </RadioGroup>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
