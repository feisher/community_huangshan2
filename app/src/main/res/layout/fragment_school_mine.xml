<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/business_bg">
    <include layout="@layout/layout_school_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/title_color">
        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_marginTop="50px"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@mipmap/school_four"/>

        <TextView
            android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34px"
                android:layout_marginTop="25px"
                android:layout_marginBottom="40px"
                android:textColor="@color/white"
                android:text="张峰"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_mobile"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textColor="#000000"
                android:text="手机号码"/>
            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18888888886"
                android:layout_marginRight="30px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_idno"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textColor="#000000"
                android:text="身份证号"/>
            <TextView
                android:id="@+id/tv_id_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="341323198109171927"
                android:layout_marginRight="30px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
        <LinearLayout
            android:id="@+id/ll_duty"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textColor="#000000"
                android:text="我的职务"/>
            <TextView
                android:id="@+id/tv_duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数学老师"
                android:layout_marginRight="30px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_clazz"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textColor="#000000"
                android:text="我的学校"/>
            <TextView
                android:id="@+id/tv_clazz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三年级二班"
                android:layout_marginRight="30px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
        <LinearLayout
            android:id="@+id/ll_apply_other_role"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textColor="#000000"
                android:text="申请其他角色"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:src="@mipmap/school_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>
    </LinearLayout>


</LinearLayout>
