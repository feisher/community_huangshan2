<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <RelativeLayout
        android:layout_width="640px"
        android:layout_height="494px"
        android:background="@color/title_color">

        <!--<clubharge.view.TimerView-->
        <!--android:id="@+id/timer_view"-->
        <!--android:layout_width="309px"-->
        <!--android:layout_height="309px"-->
        <!--android:layout_centerInParent="true"/>-->

        <ProgressBar
            android:layout_width="309px"
            android:layout_height="309px"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="充电中..."
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="640px"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32px"
                android:layout_height="30px"
                android:layout_marginLeft="22px"
                android:src="@mipmap/yuyue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"
                android:text="预约信息"
                android:textColor="@color/font_color_3"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="32px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间 : "
                android:textColor="@color/font_color_4"
                android:textSize="26px" />

            <TextView
                android:id="@+id/yuyue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_color_4"
                android:textSize="26px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="17px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时长 : "
                android:textColor="@color/font_color_4"
                android:textSize="26px" />

            <TextView
                android:id="@+id/yuyue_shichang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_color_4"
                android:textSize="26px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="17px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约站点 : "
                android:textColor="@color/font_color_4"
                android:textSize="26px" />

            <TextView
                android:id="@+id/yuyue_zhandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_color_4"
                android:textSize="26px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="17px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约人 : "
                android:textColor="@color/font_color_4"
                android:textSize="26px" />

            <TextView
                android:id="@+id/yuyue_ren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_color_4"
                android:textSize="26px" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
