<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_role_check_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="com.yusong.club.ui.school.user.activity.CreateRoleCheckResultActivity">
    <include layout="@layout/app_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84px"
            android:background="@mipmap/request_fail"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:textSize="34px"
        android:textColor="#333333"
        android:text="您的申请未通过"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="72px"
        android:background="#d9d9d9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:textSize="29px"
            android:textColor="#000"
            android:text="审核时间"/>
        <TextView
            android:id="@+id/tv_check_time"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:paddingRight="40px"
            android:gravity="right|center_vertical"
            android:text="2017年2月23日15:18:43"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:textSize="29px"
            android:textColor="#000"
            android:text="拒绝理由"/>
        <TextView
            android:id="@+id/tv_refuse_reason"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:paddingRight="40px"
            android:gravity="right|center_vertical"
            android:text="您的身份信息不完整"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"/>
    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="47px"
        android:background="@drawable/select_blue"
        android:textColor="@color/selecte_text"
        android:text="重新申请"
        />
</LinearLayout>
