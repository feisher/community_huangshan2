<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    tools:context="com.yusong.club.ui.me.activity.MyInfoActivity">

    <include layout="@layout/app_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="21px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_look_user_info"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#fff"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="29px"
            android:src="@mipmap/default_user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feisher"
                android:textColor="#000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="18888888888"
                android:textColor="#888888"
                android:textSize="30px" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="29px"
            android:background="@mipmap/arrow_right_gray" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="意见反馈"
            android:textColor="#000"
            android:textSize="29px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="right|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="29px"
            android:background="@mipmap/arrow_right_gray" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_give_a_mark"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="给我们评分"
            android:textColor="#000"
            android:textSize="29px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="right|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="29px"
            android:background="@mipmap/arrow_right_gray" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="清除缓存"
            android:textColor="#000"
            android:textSize="29px" />

        <TextView
            android:id="@+id/tv_cache_volume"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="122MB" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="29px"
            android:background="@mipmap/arrow_right_gray" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_about_us"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:text="关于智联"
            android:textColor="#000"
            android:textSize="29px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="right|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="29px"
            android:background="@mipmap/arrow_right_gray" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20px"
        android:background="#d9d9d9" />

    <TextView
        android:id="@+id/tv_exit_login"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#ff0000"
        android:textSize="29px" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />


</LinearLayout>
