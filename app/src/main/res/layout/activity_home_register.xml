<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/app_title"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="#d9d9d9"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="90px"
                android:layout_weight="1"
                android:layout_marginLeft="31px"
                android:background="@null"
                android:inputType="number"
                android:textSize="34px"
                android:textColor="#888888"
                android:hint="请输入11位手机号"
                />

            <Button
                android:id="@+id/btn_getCode"
                android:layout_width="196px"
                android:layout_height="69px"
                android:layout_marginRight="31px"
                android:background="@drawable/shape_send_msg"
                android:textSize="30px"
                android:textColor="@color/btn_color"
                android:text="获取验证码"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="31px"
        android:background="#d9d9d9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >

        <EditText
            android:id="@+id/et_msgCode"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="31px"
            android:background="@null"
            android:inputType="number"
            android:textSize="34px"
            android:textColor="#888888"
            android:hint="短信验证码"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="31px"
        android:background="#d9d9d9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >

        <EditText
            android:id="@+id/et_pswd"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="31px"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="34px"
            android:textColor="#888888"
            android:hint="请输入密码"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="31px"
        android:background="#d9d9d9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >

        <EditText
            android:id="@+id/et_okpwd"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="31px"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="34px"
            android:textColor="#888888"
            android:hint="请确认密码"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        />

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="580px"
        android:layout_height="81px"
        android:layout_marginLeft="29px"
        android:layout_marginTop="36px"
        android:background="@drawable/selector"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1dacff"
            tools:text="注   册"
            android:textColor="#ffffff"
            />
    </com.balysv.materialripple.MaterialRippleLayout>
    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118px"

            android:textSize="28px"
            android:text="注册即视为同意"
            />

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#3492E9"
            android:text="《用户服务协议》"
            />


    </LinearLayout>


</LinearLayout>
