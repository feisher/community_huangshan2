<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/send_weixin_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36px"
                android:src="@mipmap/through_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/font_color_3"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_qq_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36px"
                android:src="@mipmap/through_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/font_color_3"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_duanxin_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36px"
                android:src="@mipmap/through_duanxin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:gravity="center"
                android:text="短信"
                android:textColor="@color/font_color_3"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_native_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36px"
                android:src="@mipmap/through_native" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:gravity="center"
                android:text="保存到本地"
                android:textColor="@color/font_color_3"
                android:textSize="24px" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>