<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="640px"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:background="#eeeeee">


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15px"
        android:background="#d9d9d9"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29px"
            android:textSize="28px"
            android:textColor="@color/font_color_6"
            tools:text="订单号:45642134454"/>

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:textSize="28px"
            android:textColor="@color/title_color"
            tools:text="未付款"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ffffff"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="29px"
            android:layout_marginRight="32px"
            android:background="#d9d9d9"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:textSize="28px"
                    android:text="测试"
                    />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:textSize="28px"
                    android:text="15888888888"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="15px"
                android:textSize="28px"
                android:textColor="#333333"
                android:text="浙江省杭州市西湖区三墩镇振华路208号裕华科技园三楼wefwefewf"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="17px"
                android:layout_height="28px"
                android:layout_gravity="right"
                android:layout_marginRight="32px"
                android:src="@mipmap/icon_right"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21px"
        android:background="#ffffff">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20px"
            android:background="#d9d9d9"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >

        <Button
            android:id="@+id/btn_delOrder"
            android:layout_width="162px"
            android:layout_height="57px"
            android:layout_marginLeft="260px"
            android:background="@drawable/order_item_btn"
            android:textSize="24px"
            android:text="删除订单"
            />

        <Button
            android:id="@+id/btn_look"
            android:layout_width="162px"
            android:layout_height="57px"
            android:layout_marginLeft="25px"
            android:background="@drawable/order_item_lijipay_button"
            android:textSize="24px"
            android:textColor="@color/title_color"
            android:text="查看物流"
            />
    </LinearLayout>
    
    
</LinearLayout>
